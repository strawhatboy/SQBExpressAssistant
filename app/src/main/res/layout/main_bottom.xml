<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_buttom"
    android:layout_width="fill_parent"
    android:layout_height="55dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/bg_gray"
        >

        <LinearLayout
            android:id="@+id/id_tab_btn_rob_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:background="@color/bg_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rob_order"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="@color/font_white"
                android:text="@string/tab_btn_rob_order"
                android:textSize="18sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffc7c9ca"></View>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_btn_history_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_history_order"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="@color/font_black"
                android:text="@string/tab_btn_history_order"
                android:textSize="18sp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffc7c9ca"></View>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_btn_my_wallet"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="18sp"
                android:text="@string/tab_btn_my_wallet"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
