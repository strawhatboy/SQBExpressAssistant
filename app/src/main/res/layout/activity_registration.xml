<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg2"
              android:orientation="vertical"
              android:padding="20dp"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/registration_title"
                android:textColor="@color/font_white"
                android:textSize="22sp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="500dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.4"
                        android:background="@drawable/form_section"
                        android:orientation="vertical">

                        <!-- placeholder as margin-top -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_usr"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_username"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="textEmailAddress"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_pwd"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="textPassword"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <!-- placeholder as margin-bottom -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                        </LinearLayout>
                    </LinearLayout>

                    <!-- placeholder as separator -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.4"
                        android:background="@drawable/form_section"
                        android:orientation="vertical">

                        <!-- placeholder as margin-top -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_name"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_real_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="textPersonName"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_id"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_id"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:digits="0123456789x"
                                android:inputType="number"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_photo_placeholder"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="@string/registration_photo_placeholder"
                                android:textColor="@color/font_green"
                                android:textSize="14sp"/>

                            <Button
                                android:id="@+id/btn_registration_pick_photo"
                                android:layout_width="90dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/button_green_selector"
                                android:text="@string/registration_pick_photo"
                                android:textColor="@color/font_white"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <!-- placeholder as margin-bottom -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                        </LinearLayout>
                    </LinearLayout>

                    <!-- placeholder as separator -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.4"
                        android:background="@drawable/form_section"
                        android:orientation="vertical">

                        <!-- placeholder as margin-top -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_mobile"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_mobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:inputType="number"
                                android:textSize="12sp"
                                />

                            <Button
                                android:id="@+id/btn_registration_get_passcode"
                                android:layout_width="90dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/button_blue_selector"
                                android:text="@string/registration_get_passcode"
                                android:textColor="@color/font_white"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_passcode"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_passcode"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="number"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_district_selection"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <Spinner
                                android:layout_gravity="center"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/sp_registration_province"
                                android:animationCache="true"
                                android:drawSelectorOnTop="true"
                                >

                            </Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <Spinner
                                android:layout_gravity="center"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/sp_registration_city">

                            </Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/font_black"/>

                            <Spinner
                                android:layout_gravity="center"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/sp_registration_district">

                            </Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/registration_addr"
                                android:textColor="@color/font_black"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_registration_full_addr"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <!-- placeholder as margin-bottom -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkbox_registration_accept_protocol"
            style="@style/checkbox_white_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/registration_accept_license"
            android:textColor="@color/font_black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_registration_agreement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tv_as_button_selector"
            android:text="@string/registration_license"
            android:textColor="@color/font_white"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:paddingTop="5dp"
        >

        <Button
            android:id="@+id/btn_registration_ok"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_blue_selector"
            android:enabled="false"
            android:text="@string/btn_ok"
            android:textColor="@color/font_white"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn_registration_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_green_selector"
            android:text="@string/btn_cancel"
            android:textColor="@color/font_white"
            android:textSize="22sp"/>
    </LinearLayout>
</LinearLayout>