<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_history_list_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_history_list_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/font_black"
                android:text="小晶石日用百货店"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:gravity="center|right"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="时间："
                android:textColor="@color/font_grey"/>
            <TextView
                android:id="@+id/tv_history_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="2015.05.11 15:21:14"
                android:textColor="@color/font_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:gravity="center|right"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/font_green"
                android:text="相距："/>
            <TextView
                android:id="@+id/tv_history_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/font_green"
                android:layout_marginRight="30dp"
                android:text="1.36km"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/font_green"
                android:text="酬金："/>
            <TextView
                android:id="@+id/tv_history_list_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/font_green"
                android:text="4.88元"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/history_seperator"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="fill_parent"></LinearLayout>

</LinearLayout>